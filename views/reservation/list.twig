{% extends 'layout.twig' %}
{% block body %}
<div class="main-content">
<form action="#" method="post" enctype="multipart/form-data">
    <div>
         <a href="reservations/add" class="btn btn-primary addButton">Ajouter</a>
    </div>
</form>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Client</th>
            <th>Hotel</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Statut</th>
            <th>Total</th>
            <th>Nombre T1</th>
            <th>Nombre T2</th>
            <th>Nombre T3</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% if reservations == null %}
            <td style="text-align: center;" colspan="10">Aucune donnée à afficher</td>
        {% else %}
        {% for item in reservations %}
            <tr>
                <td>{{ item.client }}</td>
                <td>{{ item.hotel }}</td>
                <td>{{ item.startDate  }}</td>
                <td>{{ item.endDate  }}</td>
                <td>{{ item.status }}</td>
                <td>{{ item.total }}</td>
                <td>{{ item.numberR1 }}</td>
                <td>{{ item.numberR2 }}</td>
                <td>{{ item.numberR3 }}</td>
                <td>
                    <a href="#" class="btn btn-danger">Supprimer</a>
                    <a href="reservations/update" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        {% endif %}
    </tbody>
</table>
</div>
{% endblock %}
