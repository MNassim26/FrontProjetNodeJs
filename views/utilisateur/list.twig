{% extends 'layout.twig' %}
{% block body %}
<div class="main-content">
<form action="#" method="post" enctype="multipart/form-data">
    <div>
         <a href="utilisateurs/add" class="btn btn-primary addButton">Ajouter</a>
    </div>
</form>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Date d'inscription</th>
            <th>Adresse</th>
            <th>Numéro de télephone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% if users == null %}
            <td style="text-align: center;" colspan="8">Aucune donnée à afficher</td>
        {% else %}
        {% for item in users %}
            <tr>
                <td>{{ item.username }}</td>
                <td>{{ item.familyName}}</td>
                <td>{{ item.FirstName}}</td>
                <td>{{ item.email  }}</td>
                <td>{{ item.inscriptionDate }}</td>
                <td>{{ item.address }}</td>
                <td>{{ item.phoneNumber }}</td>
                <td>
                    <a href="#" class="btn btn-danger">Supprimer</a>
                    <a href="utilisateurs/update" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        {% endif %}
    </tbody>
</table>
</div>
{% endblock %}
